{
	"name": "lnbits-ts",
	"version": "0.0.3",
	"description": "NPM Package for LNBits.com API.",
	"main": "dist/index.js",
	"private": false,
	"repository": "github:BilligsterUser/lnbits-ts",
	"types": "dist/index.d.ts",
	"author": "@billigsteruser",
	"license": "MIT OR Apache-2.0",
	"type": "module",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"lint": "npx eslint src --ext .ts --fix || true",
		"start": "node dist/index.js",
		"build": "npx tsc",
		"test": "npx jest --coverage --verbose --passWithNoTests",
		"dcheck": "npx depcheck",
		"debug": "node --inspect=5858 -r ts-node/register src/index.ts",
		"fmtJson": "npx prettier *.json --write --use-tabs --tab-width 4",
		"check-updates": "npx npm-check -y",
		"prepare": "npm run build",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint",
		"version": "npm run lint && git add -A src",
		"postversion": "git push && git push --tags",
		"pre-publish": "bash ./scripts/pre-publish.sh",
		"clean": "(rm -rf dist || true) && (rm -rf coverage || true)"
	},
	"keywords": [
		"bitcoin",
		"lightning-network",
		"lnbits",
		"typescript",
		"axios"
	],
	"dependencies": {
		"axios": "^1.6.5"
	},
	"devDependencies": {
		"@getify/eslint-plugin-proper-arrows": "^11.0.3",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.11.6",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.12.0",
		"eslint": "^8.56.0",
		"eslint-plugin-compat": "^4.2.0",
		"eslint-plugin-deprecate": "^0.8.4",
		"eslint-plugin-es5": "^1.5.0",
		"eslint-plugin-eslint-plugin": "^6.0.0",
		"eslint-plugin-html": "^8.0.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsdoc": "^48.0.2",
		"eslint-plugin-json": "^4.0.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-simple-import-sort": "^12.0.0",
		"eslint-plugin-tsdoc": "^0.3.0",
		"jest": "^29.7.0",
		"prettier": "^3.2.4",
		"ts-jest": "^29.1.2",
		"ts-jest-resolver": "^2.0.1",
		"ts-node": "^10.9.2",
		"tslint": "^6.1.3",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3"
	}
}
