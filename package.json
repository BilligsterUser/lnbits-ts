{
	"name": "lnbits-ts",
	"version": "0.0.2",
	"description": "NPM Package for LNBits.com API.",
	"main": "dist/index.js",
	"private": false,
	"repository": "github:BilligsterUser/lnbits-ts",
	"types": "dist/index.d.ts",
	"author": "@billigsteruser",
	"license": "MIT OR Apache-2.0",
	"type": "module",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"2": "ts-node src/index.ts",
		"lint": "npm run l & npm run ll",
		"start": "node dist/index.js",
		"build": "npx tsc",
		"test": "npx jest --coverage --verbose --passWithNoTests",
		"dcheck": "npx depcheck",
		"debug": "node --inspect=5858 -r ts-node/register src/index.ts",
		"l": "npx eslint . --ext .ts,.js,.dt.s,.html --fix || true",
		"ll": "npx tslint -p . -t verbose --fix",
		"fmtJson": "npx prettier *.json --write --use-tabs --tab-width 4",
		"check-updates": "npx npm-check -y",
		"prepare": "npm run build",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint",
		"version": "npm run lint && git add -A src",
		"postversion": "git push && git push --tags",
		"pre-publish": "bash ./scripts/pre-publish.sh",
		"clean": "(rm -rf dist || true) && (rm -rf coverage || true)"
	},
	"keywords": [
		"bitcoin",
		"lightning-network",
		"lnbits",
		"typescript",
		"axios"
	],
	"dependencies": {
		"axios": "^1.4.0"
	},
	"devDependencies": {
		"@getify/eslint-plugin-proper-arrows": "^11.0.3",
		"@types/jest": "^29.5.1",
		"@types/node": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"@typescript-eslint/parser": "^5.59.1",
		"eslint": "^8.39.0",
		"eslint-plugin-compat": "^4.1.4",
		"eslint-plugin-deprecate": "^0.7.0",
		"eslint-plugin-es5": "^1.5.0",
		"eslint-plugin-eslint-plugin": "^5.0.8",
		"eslint-plugin-html": "^7.1.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsdoc": "^43.1.1",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-tsdoc": "^0.2.17",
		"jest": "^29.5.0",
		"prettier": "^2.8.8",
		"ts-jest": "^29.1.0",
		"ts-jest-resolver": "^2.0.1",
		"ts-node": "^10.9.1",
		"tslint": "^6.1.3",
		"tsx": "^3.12.7",
		"typescript": "^5.0.4"
	}
}
